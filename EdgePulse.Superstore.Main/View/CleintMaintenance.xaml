<Page x:Class="CleintMaintenance"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RetailEdge.Superstore.Main"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="1000"
      Title="CleintMaintenance"     Style="{StaticResource WinAll}"  Height="600" Width="1000"  Background="LightBlue"  
      FontFamily="Arial" FontSize="13">

    <Page.Resources>

      

    </Page.Resources>
    <Grid Margin="10" >

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="140"  ></ColumnDefinition>
            <ColumnDefinition Width="300" ></ColumnDefinition>
            <ColumnDefinition Width="200" ></ColumnDefinition>
            <ColumnDefinition Width="300" ></ColumnDefinition>

            <ColumnDefinition Width="*" ></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>

        </Grid.RowDefinitions>
        <Label Content="Select Clients" Grid.Column="0" Grid.Row="0"    />
        <ComboBox x:Name="selectClients"      Height="40" IsTextSearchEnabled="True" TextSearch.TextPath="clientNumber"   Grid.Column="1" Grid.Row="0" Grid.ColumnSpan="4"  Width="400"   HorizontalAlignment="Left"  
                      VerticalAlignment="Center"  >
            <ComboBox.ItemTemplate>

                <DataTemplate>

                    <TextBlock  

                         
                          Tag="{RelativeSource FindAncestor, AncestorType={x:Type ComboBox}}"

                        >

                        <TextBlock.Text>
                            <MultiBinding StringFormat="{}{0} ---- {1}">
                                <Binding Path="clientNumber"/>
                                <Binding Path="clientName"/>
                            </MultiBinding>
                        </TextBlock.Text>
                    </TextBlock>
                </DataTemplate>

            </ComboBox.ItemTemplate>

        </ComboBox>

        <Label Content="Superstores" Grid.Row="1" Grid.Column="0"  />
        <ComboBox  x:Name="superStores"  Height="40"  Grid.Column="1" Grid.Row="1"   Grid.ColumnSpan="4" Width="400"   VerticalAlignment="Center"  HorizontalAlignment="Left" >
            <ComboBox.ItemTemplate>

                <DataTemplate>

                    <CheckBox Content="{Binding}"
                          Tag="{RelativeSource FindAncestor, AncestorType={x:Type ComboBox}}"
                    />

                </DataTemplate>

            </ComboBox.ItemTemplate>
        </ComboBox>

        <!--Row 2-->
        <Label Grid.Row="2" Grid.Column="0" Content="Client Name" />
        <TextBox  Grid.Row="2" Grid.Column="1" />
        <Label Grid.Column="2" Content="Email Address"  Grid.Row="2"  Margin="50,0,0,0"/>
        <TextBox Grid.Row="2" Grid.Column="3" />

        <!-- Row 3-->
        <Label Grid.Row="3" Grid.Column="0" Content="Comment" />
        <TextBox  Grid.Row="3" Grid.Column="1"  />
        <Label Grid.Row="3" Grid.Column="2" Content="# of Sales"  Margin="50,0,0,0"   />
        <TextBox Grid.Row="3" Grid.Column="3" Width="50"  HorizontalAlignment="Left"    />

        <!--Row 4-->
        <Label Grid.Row="4" Grid.Column="0" Content="A/C Manager"   />
        <Label Grid.Row="4" Grid.Column="2" Content="Proactive Call - Date" Margin="50,0,0,0"   />
        <ComboBox Grid.Row="4" Grid.Column="1" >
            <ComboBoxItem Content="None"/>
        </ComboBox>
        <DatePicker Grid.Column="3" HorizontalAlignment="Left"   Grid.Row="4" Height="30" VerticalAlignment="Center"/>

        <!--Row 5-->

        <Label Grid.Row="5" Grid.Column="0" Content="REC/ERA Email"   />
        <TextBox Grid.Row="5" Grid.Column="1" />
        <Label Grid.Row="5" Grid.Column="2" Content="Buying Group"   Margin="50,0,0,0"/>
        <ComboBox Grid.Row="5" Grid.Column="3" Margin="2,2,2,2"     >
            <ComboBoxItem Content="None"/>
            <ComboBoxItem Content="Gemtime"/>
            <ComboBoxItem Content="ShowCase"/>
            <ComboBoxItem Content="USAClient"/>
            <ComboBoxItem Content="Nationalwide"/>
        </ComboBox>

        <!--Row 6-->
        <Label Grid.Row="6" Grid.Column="0" Content="Path"   ></Label>
        <TextBox Grid.Row="6" Grid.Column="1"  Grid.ColumnSpan="2" />

        <!--Row 7-->
        <Grid Grid.ColumnSpan="4" Grid.Row="7" Grid.Column="0"  HorizontalAlignment="Left" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="145"></ColumnDefinition>
                <ColumnDefinition Width="80"></ColumnDefinition>
                <ColumnDefinition  Width="145"></ColumnDefinition>
                <ColumnDefinition  Width="80"></ColumnDefinition>
                <ColumnDefinition  Width="145"></ColumnDefinition>
                <ColumnDefinition  Width="80"></ColumnDefinition>
                <ColumnDefinition  Width="145"></ColumnDefinition>
                <ColumnDefinition  Width="100"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />



            </Grid.RowDefinitions>
            <Label  Grid.Row="0" Grid.Column="0" Content="Active Client" ></Label>
            <Label  Grid.Row="0" Grid.Column="2" Content="Use Edge s/w"   ></Label>
            <CheckBox Grid.Row="0" Grid.Column="1"></CheckBox>
            <CheckBox Grid.Row="0" Grid.Column="3"></CheckBox>
            <Label Grid.Row="0" Grid.Column="4"  Content="Door Client" ></Label>
            <CheckBox Grid.Row="0" Grid.Column="5"  ></CheckBox>
            <Label  Grid.Row="0" Grid.Column="6" Content="Mentoring Client" ></Label>
            <CheckBox Grid.Row="0" Grid.Column="7"   ></CheckBox>
            <!-- sub row 2-->
            <Label  Grid.Row="1" Grid.Column="0" Content="Layaways on Pickup" ></Label>
            <CheckBox Grid.Row="1" Grid.Column="1"   ></CheckBox>
            <Label Grid.Row="1" Grid.Column="2"  Content="Macro Oked" ></Label>
            <CheckBox Grid.Row="1" Grid.Column="3"  ></CheckBox>
            <Label  Grid.Row="1" Grid.Column="4" Content="Supplier Web System"  ></Label>
            <CheckBox Grid.Row="1" Grid.Column="5"   ></CheckBox>
            <Label Grid.Row="1" Grid.Column="6"  Content="SQL Server HO" ></Label>
            <CheckBox Grid.Row="1" Grid.Column="7"  ></CheckBox>

            <!-- sub row 3-->
            <Label  Grid.Row="2" Grid.Column="0" Content="Edge Cfg HO Store #" ></Label>
            <CheckBox Grid.Row="2" Grid.Column="1"   ></CheckBox>
            <Label Grid.Row="2" Grid.Column="2"  Content="KPI Lite" ></Label>
            <CheckBox Grid.Row="2" Grid.Column="3"  ></CheckBox>
            <Label  Grid.Row="2" Grid.Column="4" Content="State"  ></Label>
            <CheckBox Grid.Row="2" Grid.Column="5"   ></CheckBox>
            <Label  Grid.Row="2" Grid.Column="6" Content="EP S/Store allowed"  ></Label>
            <CheckBox Grid.Row="2" Grid.Column="7"   ></CheckBox>

            <!-- sub row 4-->
            <Label  Grid.Row="3" Grid.Column="0" Content="Jewelsure" ></Label>
            <CheckBox Grid.Row="3" Grid.Column="1"   ></CheckBox>
            <Label Grid.Row="3" Grid.Column="2"  Content="Edge Pulse Enabled" ></Label>
            <CheckBox Grid.Row="3" Grid.Column="3"  ></CheckBox>
            <Label  Grid.Row="3" Grid.Column="4" Content="Results"  ></Label>
            <CheckBox Grid.Row="3" Grid.Column="5"   ></CheckBox>

            <!-- sub row 5-->




        </Grid>

        <StackPanel Width="400" Grid.Column="1" Grid.Row="8"  Grid.ColumnSpan="3"  Orientation="Horizontal" VerticalAlignment="Center"  HorizontalAlignment="Center">
            <Button  Content="Add" HorizontalAlignment="Left"    Template="{StaticResource SubmitButtonTemplate}"   Height="25" VerticalAlignment="Top"/>
            <Button   Content="Print" HorizontalAlignment="Left" Template="{StaticResource SubmitButtonTemplate}" Margin="20,0,20,0"  Height="25" VerticalAlignment="Top"/>
            <Button   Content="Export" HorizontalAlignment="Left" Template="{StaticResource SubmitButtonTemplate}"  Height="25" VerticalAlignment="Top"/>

        </StackPanel>

        <!--<DatePicker Grid.Row="3" Grid.Column="3"   Grid.RowSpan="2" />
        <TextBox Grid.Row="4" Grid.Column="1"  Grid.ColumnSpan="3"  />-->

        <!-- Row 8-->



        <!-- Row 9-->



    </Grid>

</Page>
